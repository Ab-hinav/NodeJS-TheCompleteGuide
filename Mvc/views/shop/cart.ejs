<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (products.length > 0) { %>
                <div class="grid">
                    <% for (let product of products) { %>
                        <article class="card product-item">
                            <header class="card__header">
                                <h1 class="product__title"><%= product.productData.title %></h1>
                            </header>
                            <div class="card__image">
                                <img src="<%=  product.productData.imageUrl %>"
                                     alt="A Book">
                            </div>
                            <div class="card__content">
                                <h2 class="product__price">$<%= product.productData.price %></h2>
                                <p class="product__description"><%= product.productData.description %></p>
                            </div>
                            <div class="card__actions">
                                <h2 class="product__quantity"><%= product.qty %></h2>
                                <form action="/cart-delete-item" method="post">
                                    <input type="hidden" name="productId" value="<%= product.productData.id%>">
                                    <button class="btn" >delete</button>
                                </form>
                            </div>
                        </article>
                    <% } %>
                </div>
            <div>total amount <%= totalPrice %></div>
            <% } else { %>
                <h1>No Products in Cart!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>
        