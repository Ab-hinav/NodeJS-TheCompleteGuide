extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if products.length > 0
                .grid
                each product in products
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image 
                            img(src="" ,alt="a image")
                        .card__content
                            h2.product__price $19.99
                            p.product__description Lorem ipsum dolor sit amet consectetur adipisicing elit. Nihil perferendis amet natus beatae sunt? Sapiente at quisquam reiciendis, earum cumque nobis aut ut.
                        .card__actions
                            button.btn add to cart    
        else
            h1 No Products added yet